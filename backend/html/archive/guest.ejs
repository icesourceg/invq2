<!DOCTYPE html>
<html lang="en">
    <head>
    <% include ./include/head %>
    
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/1.5.6/css/buttons.bootstrap4.min.css">
    <script src="/vendor/jquery/js/jquery.dataTables.min.js"></script>
    <script src="/vendor/bootstrap/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.6/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.6/js/buttons.bootstrap4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.6/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.5.6/js/buttons.print.min.js"></script>
    <script src="https://cdn.datatables.net/plug-ins/1.10.19/sorting/datetime-moment.js"></script>
  
    </head>
    <body>
        <script src="/js/guest.js"></script>
        <div class="container">
            <div class="row">                
            <% include ./include/header %>
            </div>
            <div class="guest-container">
                <div class="guest-content-header">Daftar Tamu</div>
                <div class="guest-content-signin">Tamu: 
                  <span class="guest-text-big" id="livesignedin">0</span><span class="guest-text-small"> / <%= data.count %></span></div>
                <div class="guest-content-body">
                  <table id='tblguestlist' class="table table-striped table-bordered" style="width:99%">
                  <thead>
                  <tr class=>
                    <th>Nama</th>
                    <th>Nama Toko</th>
                    <th>Cabang</th>
                    <th>Jumlah Orang</th>
                    <th>Type</th>
                    <th>Meja</th>
                    <th>Nomor Registrasi</th>
                    <th>SignIn</th>
                    <th>SignedIn</th>
                  </tr>
                  </thead>
                <tbody>
                  <% data.rows.forEach(function(d){ %>
                    <tr>
                      <td><%= d.name %></td>
                      <td><%= d.shop_name %></td>
                      <td><%= d.city %></td>
                      <td><%= d.num_invited %></td>
                      <td><%= d.guesttype %></td>
                      <td><%= d.desknumber %></td>
                      <% if ( d.Guesthistory) { %>
                        <td><%= numpad(d.Guesthistory.id,4) %></td>
                        <td><%= moment(d.Guesthistory.createdAt).format('YYYY-MM-DD HH:mm:ss'); %></td>                        
                      <% } else { %>
                        <td>-</td>
                        <td>-</td>
                      <% } %>
                      <td>  </td>
                    </tr>
                  <% }) %>
                </tbody>
                </table>
              </div>
            </div>
        </div>

        <% include ./include/scripts %>
        <% include ./include/footer %>
    </body>
</html>